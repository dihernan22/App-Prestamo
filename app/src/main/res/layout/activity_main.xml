<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoPrestamos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitud de Prestamo"
        android:textSize="30sp"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:text="Registro de Cliente"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textoPrestamos" />

    <TextView
        android:id="@+id/textNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Nombre*"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRegistro" />

    <TextView
        android:id="@+id/textApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Apellido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toEndOf="@id/textNombre"
        app:layout_constraintTop_toBottomOf="@+id/textRegistro" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="170dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/txtApellido"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textNombre"
        app:layout_constraintTop_toBottomOf="@id/textNombre" />


    <TextView
        android:id="@+id/textSexo"
        android:layout_width="58dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="Sexo"
        app:layout_constraintStart_toStartOf="@+id/txtNombre"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre" />

    <TextView
        android:id="@+id/textTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:text="Telefono*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtApellido"
        app:layout_constraintTop_toBottomOf="@+id/txtApellido" />

    <Spinner
        android:id="@+id/cbSexo"
        android:entries="@array/Sexo"
        android:layout_width="169dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/textSexo"
        app:layout_constraintTop_toBottomOf="@id/textSexo"/>

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textTelefono"
        app:layout_constraintTop_toBottomOf="@id/textTelefono" />

    <TextView
        android:id="@+id/textCedula"
        android:layout_width="68dp"
        android:layout_height="25dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="Cedula*"
        app:layout_constraintStart_toStartOf="@+id/cbSexo"
        app:layout_constraintTop_toBottomOf="@+id/cbSexo" />

    <EditText
        android:id="@+id/txtCedula"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textCedula"
        app:layout_constraintTop_toBottomOf="@id/textCedula" />

    <TextView
        android:id="@+id/textOcupacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ocupacion"
        app:layout_constraintStart_toStartOf="@+id/txtCedula"
        app:layout_constraintTop_toBottomOf="@id/txtCedula" />

    <EditText
        android:id="@+id/txtOcupacion"
        android:layout_width="364dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textOcupacion"
        app:layout_constraintTop_toBottomOf="@id/textOcupacion" />

    <TextView
        android:id="@+id/textDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Direccion*"
        app:layout_constraintStart_toStartOf="@+id/txtOcupacion"
        app:layout_constraintTop_toBottomOf="@+id/txtOcupacion" />

    <EditText
        android:id="@+id/txtDireccion"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/textDireccion"
        app:layout_constraintTop_toBottomOf="@id/textDireccion" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Continuar"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtApellido"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textApellido"
        app:layout_constraintTop_toBottomOf="@+id/textApellido" />

</android.support.constraint.ConstraintLayout>